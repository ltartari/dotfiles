[alias]
  pr              = pull --rebase
  s               = status
  st              = status --porcelain
  co              = checkout
  ci              = commit
  dc              = diff --cached
  l               = log
  lg              = log -p
  lola            = log --graph --decorate --pretty=oneline --abbrev-commit --all
  lll             = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  ls              = ls-files
  latest          = for-each-ref --sort=-committerdate --format='%(committerdate:short) %(refname:short) [%(committername)]'
  prune           = fetch --prune
  undo            = reset --soft HEAD^
  stash-all       = stash save --include-untracked
  standup         = shortlog --since=1.days --author=ltartari
  allhands        = shortlog --since=7.days --author=ltartari
  praise          = blame
[branch]
  autosetupmerge  = true
[color]
  diff            = auto
  status          = auto
  branch          = auto
  interactive     = auto
[commit]
  gpgsign         = true
[credential]
  helper          = osxkeychain
[core]
  editor          = /usr/local/bin/mvim -f
  excludesfile    = ~/.gitignore
  pager           = less -FRSX
[filter "lfs"]
  clean           = git-lfs clean %f
  smudge          = git-lfs smudge %f
  required        = true
[github]
  user            = ltartari
[gpg]
  program         = /usr/local/bin/gpg
[grep]
  lineNumber      = true
[help]
  autocorrect     = -1
[merge]
  tool            = opendiff
[pull]
  rebase          = true
[push]
  default         = current
[user]
  name            = Leo Tartari
  email           = ltartari@gmail.com
  signingkey      = 781D33B504E01D90
