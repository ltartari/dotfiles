alias b="bundle"
alias be="bundle exec"
alias brup="brew update && brew upgrade && brew cleanup"
alias cat="ccat"
alias ctags="`brew --prefix`/bin/ctags"
alias du="du -hc"
alias find="/usr/local/bin/fd"
alias g="git"
alias grep="grep -i --color=auto"
alias l="ls -1a"
alias less="less -FXRS"
alias ll="ls -Falh"
alias ln="ln -v"
alias ls="ls -G"
alias mkdir="mkdir -p"
alias r="rails"
alias restart_wifi="sudo ifconfig en1 down && sudo ifconfig en1 up"
alias run="open -n -a"
alias switcheroo="git stash-all && git pull --rebase && git stash pop"
alias tmux="TERM=screen-256color-bce tmux -u"
alias tree="tree -C"
alias use="/bin/ls -1A | tr '\n' '\0' | xargs -0 du -sk | sort -n" # list total disk usage for current folder contents
alias which="which -a"
alias promote_all="heroku pipelines:promote -r hp && heroku pipelines:promote -r mim"
