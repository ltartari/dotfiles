# LAZY MFFER STUFF

alias r="rails"
alias g="git"

alias s="bundle exec rspec"
alias cuc="bundle exec cucumber"

alias switcheroo="git stash && git pull --rebase && git stash pop"

alias b="bundle"
alias be="bundle exec"
alias ln="ln -v"
alias mkdir="mkdir -p"
alias ...="cd ../.."
alias ....="cd ../../.."

alias ls="ls -G"
alias l="ls"
alias ll="ls -al"
alias lh="ls -Alh"

alias grep="grep --color=auto"

alias tmux="TERM=screen-256color-bce tmux -u"

alias mvim="mvim --remote-silent"

alias use="/bin/ls -1A | tr '\n' '\0' | xargs -0 du -sk | sort -n" # list total disk usage for current folder contents

alias git="hub"

# Include custom aliases
[[ -f ~/.aliases.local ]] && source ~/.aliases.local
